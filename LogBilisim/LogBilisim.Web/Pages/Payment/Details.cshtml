@page "/payment/details"
@model LogBilisim.Web.Pages.Payment.DetailsModel

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="row d-flex">
    <div class="col text-center display-6">ÖDEME DETAYI</div>
</div>

<div class="row justify-content-center mt-5">
    <div class="col-6 card">
        <div class="card-title row d-flex">
            <span class="col text-center"><span class="text-primary">Sipariş No: </span><span>@Model.Payment.OrderId</span></span>
        </div> 
        <div class="card-header row d-flex">
            <span class="col-6"><span class="text-primary">Tarih: </span>@Model.Payment!.PaymentDate</span>
            <span class="col-6 text-end"><span class="text-primary">Müşteri: </span>@Model.Payment.Order.Customer.Name</span>
        </div>
        <div class="card-body row d-flex">
            <span class="col-6"><span class="text-primary">Tutar: </span>@Model.Payment.PaymentAmount</span>
            <span class="col-6 text-end"><span class="text-primary">Ödeme Şekli: </span>@Model.Payment.PaymentType.ToString()</span>
        </div>
    </div>
</div>