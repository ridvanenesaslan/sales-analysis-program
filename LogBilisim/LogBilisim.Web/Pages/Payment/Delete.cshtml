@page "/payment/delete"
@model LogBilisim.Web.Pages.Payment.DeleteModel

<div class="row justify-content-center">
    <div class="card">
        <div class="card-title text-center p-1 text-danger">UYARI!</div>
        <div class="card-body">
            <p class="text-center">
                @ViewData["message"]
            </p>
            <form method="post">
                <button type="submit" class="btn btn-success">Evet</button>
                <a asp-page="/Payment/index" class="btn btn-warning">Hayır</a>
            </form>
        </div>
    </div>
</div>