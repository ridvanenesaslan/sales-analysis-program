@page
@model IndexModel
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LogBilisim - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>

        body {
            background: #191c22;
            margin-top: 100px;
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                @if (ViewData["validationError"] != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @ViewData["validationError"]
                    </div>
                }
                @if (ViewData["notExistUserError"] != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @ViewData["notExistUserError"]
                    </div>
                }
                @if (ViewData["passwordError"] != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @ViewData["passwordError"]
                    </div>
                }
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-4">
                <div class="card" style="width: 30rem;">
                    <div class="row d-flex">
                        <div class="col  text-center">
                            <img src="~/assets/img/log_bilisim_logo.jpeg" class="card-img-top" style="width:150px; height:150px; align-items:center">
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Kullanıcı adı" asp-for="LoginViewModel.Username">
                            </div>
                            <div class="form-group mt-2">
                                <input type="password" class="form-control" placeholder="Şifre" asp-for="LoginViewModel.Password">
                            </div>
                            <div class="form-group mt-2">
                                <input class="form-check-input" type="checkbox" asp-for="LoginViewModel.RememberMe" />
                                <label class="form-check-label"> Hatırla </label>
                            </div>
                            <div class="form-group mt-4"></div>
                            <button type="submit" class="btn btn-block btn-primary btn-float m-t-25">Giriş</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>






