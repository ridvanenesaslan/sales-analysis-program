@page "/customer/index"
@model LogBilisim.Web.Pages.Customer.IndexModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="row d-flex">
    <div class="col text-center display-6">
        MÜŞTERİLER
    </div>
</div>

<div class="row d-flex justify-content-end">
    <div class="col text-end">
        <a class="btn btn-outline-primary btn-sm" asp-page="/Customer/Create"><i class="fa-solid fa-plus"></i> YENİ MÜŞTERİ</a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col mt-3 text-center">
        <table class="table table-bordered table-hover">
            <thead class="header">
                <tr class="text">
                    <th>Id</th>
                    <th>MÜŞTERİ AD SOYAD / ÜNVAN</th>
                    <th>Telefon</th>
                    <th>E-Posta</th>
                    <th>Adres</th>
                    <th>ŞEHİR</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.Name</td>
                        <td>@customer.PhoneNumber</td>
                        <td>@customer.EmailAddress</td>
                        <td>@customer.Address</td>
                        <td>@customer.City</td>
                        <td>
                            <a asp-page="/Customer/Update" asp-route-id="@customer.Id" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-title="Güncelle"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-page="/Customer/Delete" asp-route-id="@customer.Id" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-title="Sil"><i class="fa-solid fa-trash"></i></a>
                            <a asp-page="/Customer/Orders" asp-route-id="@customer.Id" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-title="Siparişler"><i class="fa-solid fa-cart-shopping"></i></a>
                            <a asp-page="/Customer/Payments" asp-route-id="@customer.Id" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-title="Ödemeler"><i class="fa-solid fa-money-bill-1-wave"></i></a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>

}
