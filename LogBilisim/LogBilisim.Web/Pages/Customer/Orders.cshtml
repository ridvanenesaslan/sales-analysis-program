<div class="row justify-content-center mt-5">
    <div class="col-6 mt-3 text-center">
        <table class="table table-bordered table-hover">
            <thead class="header">
                <tr class="text">
                    <th>Id</th>
                    <th>SİPARİŞ TARİHİ</th>
                    <th>DURUMU</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToLongDateString()</td>
                        <td>@order.OrderStatus.ToString()</td>
                        <td>
                            <a asp-page="/Order/Details" asp-route-id="@order.Id" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-title="Sipariş Detayı"><i class="fa-solid fa-circle-info"></i></a>
                            <a asp-page="/Payment/Create" asp-route-orderId="@order.Id" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-title="Ödeme Oluştur"><i class="fa-solid fa-plus-circle"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>

}