<div class="row justify-content-center mt-5">
    <div class="col mt-3 text-center">
        <table class="table table-bordered table-hover">
            <thead class="header">
                <tr class="text">
                    <th>Id</th>
                    <th>SİPARİŞ Id</th>
                    <th>ÖDEME TARİHİ</th>
                    <th>TUTAR</th>
                    <th>ÖDEME ŞEKLİ</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Customer.Orders)
                {

                    @foreach (var payment in order.Payments)
                    {
                        <tr>
                            <td>@payment.Id</td>
                            <td>@payment.Order.Id</td>
                            <td>@payment.PaymentDate</td>
                            <td>@payment.PaymentAmount</td>
                            <td>@payment.PaymentType</td>
                            <td>
                                <a asp-page="/Payment/Update" asp-route-id="@payment.Id" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-title="Güncelle"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-page="/Payment/Delete" asp-route-id="@payment.Id" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-title="Sil"><i class="fa-solid fa-trash"></i></a>
                            </td>

                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>

}
