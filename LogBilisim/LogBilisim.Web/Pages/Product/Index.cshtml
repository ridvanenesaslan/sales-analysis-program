@page "/product/Index"
@model LogBilisim.Web.Pages.Product.IndexModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="row d-flex">
    <div class="col text-center display-6">
        ÜRÜNLER
    </div>
</div>

<div class="row d-flex justify-content-end">
    <div class="col text-end">
        <a class="btn btn-outline-primary btn-sm" asp-page="/Category/Create"><i class="fa-solid fa-plus"></i> YENİ KATEGORİ</a>
        <a class="btn btn-outline-primary btn-sm" asp-page="/Product/Create"><i class="fa-solid fa-plus"></i> YENİ ÜRÜN</a>
    </div>
  
</div>
<div class="row justify-content-center">
    <div class="col mt-3 text-center">
        <table class="table table-bordered table-hover">
            <thead class="header">
                <tr class="text">
                    <th>Id</th>
                    <th>KATEGORİ</th>
                    <th>ÜRÜN ADI</th>
                    <th>AÇIKLAMA</th>
                    <th>EKLENME TARİHİ</th>
                    <th>FİYAT</th>
                    <th>STOK MİKTARI</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Category.Name</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.CreatedDate</td>
                        <td>@product.Price</td>
                        <td>@product.StockQuantity</td>
                        <td>
                            <a asp-page="/Product/Update" asp-route-id="@product.Id" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-title="Güncelle"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-page="/Product/Delete" asp-route-id="@product.Id" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-title="Sil"><i class="fa-solid fa-trash"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>

}
