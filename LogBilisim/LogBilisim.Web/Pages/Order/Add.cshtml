@page "/order/add"
@model LogBilisim.Web.Pages.Order.AddModel

<div class="row justify-content-center">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" value="@TempData["orderId"]"  asp-for="AddOrderDetail.OrderId" />
                    <div class="form-group">
                        <label class="form-label">Ürün</label>
                        <select class="form-select form-control" asp-for="AddOrderDetail.ProductId" asp-items="@Model.ProductList">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Miktar</label>
                        <input type="number" asp-for="AddOrderDetail.Quantity" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col text-end ml-3">
                            <button type="submit" class="btn btn-success btn-sm">Kaydet</button>
                            <a asp-page="/Order/Details" asp-route-id="@TempData["orderId"]" class="btn btn-warning btn-sm">Geri</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>