@page "/order/index"
@model LogBilisim.Web.Pages.Order.IndexModel


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="row d-flex">
    <div class="col text-center display-6">
        SİPARİŞLER
    </div>
</div>

<div class="row d-flex justify-content-end">
    <div class="col text-end">
        <a class="btn btn-outline-primary btn-sm" asp-page="/Order/Create"><i class="fa-solid fa-plus"></i> YENİ Sipariş</a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col mt-3 text-center">
        <table class="table table-bordered table-hover">
            <thead class="header">
                <tr class="text">
                    <th>Id</th>
                    <th>SİPARİŞ TARİHİ</th>
                    <th>MÜŞTERİ</th>
                    <th>DURUM</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate</td>
                        <td>@order.Customer.Name</td>
                        <td>@order.OrderStatus.ToString()</td>
                        <td>
                            <a asp-page="/Order/Update" asp-route-id="@order.Id" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-title="Güncelle"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-page="/Order/Delete" asp-route-id="@order.Id" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-title="Sil"><i class="fa-solid fa-trash"></i></a>
                            <a asp-page="/Order/Details" asp-route-id="@order.Id" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-title="Sipariş Detayı"><i class="fa-solid fa-cart-shopping"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>

}
