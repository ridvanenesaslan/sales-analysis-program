@page "/order/details"
@model LogBilisim.Web.Pages.Order.DetailsModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="row d-flex">
    <div class="col text-center display-6">
        SİPARİŞ DETAYLARI
    </div>
</div>

<div class="row d-flex justify-content-end">
    <div class="col text-end">
        <a class="btn btn-outline-primary btn-sm" asp-page="/Order/Add" asp-route-orderId="@TempData["orderId"]!.ToString()"><i class="fa-solid fa-plus"></i> İÇERİK EKLE</a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col mt-3 text-center">
        <table class="table table-bordered table-hover">
            <thead class="header">
                <tr class="text">
                    <th>ÜRÜN</th>
                    <th>MİKTAR</th>
                    <th>TUTAR</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderDetail in Model.OrderDetails)
                {
                    <tr>
                        <td>@orderDetail.Product.Name</td>
                        <td>@orderDetail.Quantity</td>
                        <td>@orderDetail.Amount</td>
                        <td>
                            <a asp-page="/OrderDetail/Update" asp-route-id="@orderDetail.Id" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-title="Güncelle"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-page="/OrderDetail/Delete" asp-route-id="@orderDetail.Id" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-title="Sil"><i class="fa-solid fa-trash"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th>Toplam: @TempData["totalAmount"]</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>

}
